<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Neumorphism" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_back</item>
        <item name="colorPrimaryVariant">@color/light_end_shadow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/text_gray</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor">@color/light_back</item>
        <item name="fontFamily">@font/gilroy</item>

        <item name="colorTertiary">@color/light_start_shadow</item>

        <item name="neumorph_shadowColorDark">@color/light_start_shadow</item>
        <item name="neumorph_shadowColorLight">@color/light_end_shadow</item>

<!--        <item name="android:windowLightStatusBar">true</item>-->

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Neumorphism" parent="Base.Theme.Neumorphism" />

    <style name="NeumorphismImage">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">36dp</item>
    </style>

    <style name="NeumorphismCard">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">16dp</item>
    </style>

    <style name="neuButton">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">8dp</item>
    </style>
</resources>