<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    app:neumorph_backgroundColor="?attr/colorPrimary"
    app:neumorph_shadowColorDark="?attr/neumorph_shadowColorDark"
    app:neumorph_shadowColorLight="?attr/neumorph_shadowColorLight"
    app:neumorph_shadowElevation="4dp"
    app:neumorph_shapeAppearance="@style/NeumorphismCard"
    app:neumorph_shapeType="basin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_selected" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/colorPrimary"
            android:backgroundTintMode="add"
            android:background="@drawable/card_background"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/txtEngine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Engine"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="sleeping mode"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/btn_go_to_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_backgroundColor="?attr/colorPrimary"
        app:neumorph_shadowColorDark="?attr/neumorph_shadowColorDark"
        app:neumorph_shadowColorLight="?attr/neumorph_shadowColorLight"
        app:neumorph_shadowElevation="2dp"
        app:neumorph_shapeAppearance="@style/NeumorphismCard">

        <LinearLayout
            android:paddingEnd="24dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to Open the car"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp" />

        </LinearLayout>

    </soup.neumorphism.NeumorphCardView>


</soup.neumorphism.NeumorphCardView>

